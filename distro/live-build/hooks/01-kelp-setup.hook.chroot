#!/bin/bash
# Post-install hook for Kelp Linux ISO build

# Create kelp system user
useradd --system --create-home --shell /bin/bash kelp

# Create required directories
mkdir -p /var/log/kelp
mkdir -p /run/kelp
mkdir -p /etc/kelp
chown kelp:kelp /var/log/kelp /run/kelp /etc/kelp

# Enable the gateway service
systemctl enable kelp-gateway.service

# Set up loginctl linger for kelp user
loginctl enable-linger kelp 2>/dev/null || true

echo "Kelp Linux setup complete"
